{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<div class="w-100 h-100">
		<div class="home-bg position-relative"><img src="/uploads/MainPics.jpg" alt="trick picture" class="img-fluid">
			
			<a href="#tricks" class="position-absolute bottom-0 end-0 mb-2 mx-1">
				<i class="fas fa-chevron-down fa-4x chevron-down"></i>
			</a>
		</div>
	</div>
	<!-- End Home Image -->


	
	<div class="row text-center" style="height: 120px;" id="tricks"> <h1>SnowTricks Communauty</h1> </div>
	<div class=" d-flex flex-wrap justify-content-evenly ">
		{% for trick in tricks %}

			<div class="card col-2 m-1">

				<img src="/uploads/{{ mainPicture }}" alt="{{ trick.name }} picture" class="card-img-top">
				<div class="card-body">
					<a href="{{ path('app_trick', {'slug' : trick.slug }) }}" class="card-text">{{ trick.name }}</a>
				</div>
			</div>

		{% endfor %}
	</div>
	<div class="container-fluid position-relative">
		<a href="#tricks" class="position-absolute bottom-0 end-0  mx-1">
			<i class="fas fa-chevron-up fa-4x chevron-up"></i>
		</a>
	</div>
{% endblock %}
