{% extends 'base.html.twig' %}

{% block title %}Liste des categories de figures
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
    
	<div class="container col-8">
		<h1 class="text-center">Liste des groupes de figures</h1>
        <a href="{{ path('app_category_add') }}" class="btn btn-outline-primary">Ajouter une categorie</a>
		{% for category in categories %}

			<div class="card col-12 mt-2">
				<div class="row g-0 align-items-center">
					<div class="card-body col-10">
						{{ category.name }}
					</div>
					<div class="col-2">
						<a href="{{ path('app_category_edit', {'id' : category.id }) }}" class="btn btn-primary">Modifier</a>
					</div>

				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
