{% extends 'base.html.twig' %}


{% block title %}Trick
{% endblock %}

{% block body %}
	<h1>{% if trick.id %}
			Modifier la Figure
		{% else %}
			Ajouter un Trick
		{% endif %}</h1>
	{{ form_start(formTrick)}}

	{{ form_row(formTrick.name, {
                'label' : 'Nom de la figure',
                'attr'  : {'placeholder' : 'Entrer la nouvelle figure'},
        } 
        ) }}

		{{ form_row(formTrick.description, {
                'label' : 'Description',
                'attr'  : {'placeholder' : 'Entrer la description de la figure'},
        } 
        ) }}

		{{ form_row(formTrick.category, {
                'label' : 'Categorie',
                'attr'  : {'placeholder' : 'Selectionner la cat√©gorie'},
        } 
        ) }}
	<div class="container">
		<button type="submit" class="btn btn-success">
		{% if trick.id %}
			Modifier la Figure
		{% else %}
			Ajouter un Trick
		{% endif %}
		</button>
	</div>
	{{ form_end(formTrick) }}
{% endblock %}
